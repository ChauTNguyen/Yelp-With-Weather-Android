<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="11dp"
    card_view:cardElevation="0dp"
    card_view:cardMaxElevation="0dp"
    card_view:cardCornerRadius="1dp"
    android:layout_margin="-10dp"
    card_view:cardBackgroundColor="#fff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/yelp_business_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/yelp_image_icon"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="5dp"
            android:textColor="#f44336" />

        <ImageView
            android:id="@+id/yelp_image_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/yelp_rating_img_url"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@id/yelp_business_title"
            android:layout_toRightOf="@id/yelp_image_icon"
            android:layout_marginLeft="20dp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/yelp_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yelp_business_title"
            android:layout_toRightOf="@id/yelp_rating_img_url"
            android:layout_marginLeft="3dp"
            android:textColor="#000"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/yelp_display_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yelp_rating_img_url"
            android:layout_toRightOf="@id/yelp_image_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:textSize="10dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</FrameLayout>